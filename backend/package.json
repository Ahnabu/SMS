{
  "name": "school-management-backend",
  "version": "1.0.0",
  "description": "School Management System Backend API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ignore-path .eslintignore --ext .ts",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start:prod": "node ./dist/server.js",
    "lint:fix": "eslint src --ignore-path .eslintignore --ext .ts --fix",
    "prettier": "prettier --write \"./src/**/*.+(ts|js|json)\"",
    "seed": "ts-node ./src/app/scripts/seeder-cli.ts",
    "seed:help": "ts-node ./src/app/scripts/seeder-cli.ts help",
    "migrate:address": "ts-node ./src/scripts/addAddressToExistingStudents.ts"
  },
  "keywords": [
    "school",
    "management",
    "education",
    "api"
  ],
  "author": "School Management Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.10.1",
    "validator": "^13.15.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.12.3",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "globals": "^16.0.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
